@model IEnumerable<FirstApp.Models.Employee>

@{
    ViewData["Title"] = "Index";
   
}


    <div class="container">
        <a asp-controller="Home" asp-action="Create"  class="btn btn-primary">New</a>
        <div class="card-deck">
            @foreach (var item in Model)
            {
                <div class="card m-3">
                    <div class="card-header">
                        <h3>
                            @item.Name
                        </h3>
                    </div>
                    <img class="card-img-top" src="~/Images/img101.jpeg" />
                    <div class="card-footer text-center">
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                        <a class="btn btn-primary">Edit</a>
                        <a class="btn btn-primary">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
